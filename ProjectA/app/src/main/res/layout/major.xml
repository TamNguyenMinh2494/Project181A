<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_sub_sub">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Spinner
            android:id="@+id/spinnerListMajor"
            android:layout_width="match_parent"
            android:layout_height="50dp">
        </Spinner>
        <Button
            android:id="@+id/btnGoMajor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Go"
            android:layout_below="@id/spinnerListMajor"/>
        <ListView
            android:id="@+id/ListViewListMajor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnGoMajor"
            android:divider="#FF3366"
            android:dividerHeight="10dp">
        </ListView>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>