<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@drawable/background_main">
    <LinearLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome"
            android:layout_gravity="center"
            android:layout_marginLeft="85dp"
            android:textSize="50dp"
            android:textColor="@android:color/white"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_weight="8"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <!--ID-->
        <ImageView
            android:id="@+id/imageViewID"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/ic_id"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/textViewID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Input ID"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_below="@id/imageViewID"
            android:layout_marginLeft="55dp" />

        <!--List-->
        <ImageView
            android:id="@+id/imageViewList"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/ic_list"
            android:layout_alignTop="@+id/imageViewID"
            android:layout_toRightOf="@+id/imageViewID"
            android:layout_marginLeft="50dp"/>
        <TextView
            android:id="@+id/textViewList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="List"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_below="@+id/imageViewList"
            android:layout_marginLeft="240dp"/>


        <!--activity_statistical_main-->
        <ImageView
            android:id="@+id/imageViewSta"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/ic_statistical"
            android:layout_below="@+id/textViewID"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="30dp"/>
        <TextView
            android:id="@+id/txtSta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Statistical"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_below="@+id/imageViewSta"
            android:layout_marginLeft="55dp"/>

        <!--Chart-->
        <ImageView
            android:id="@+id/imageViewChart"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/ic_chart"
            android:layout_alignTop="@id/imageViewSta"
            android:layout_toRightOf="@+id/imageViewSta"
            android:layout_below="@+id/textViewList"
            android:layout_marginLeft="50dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chart"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_below="@+id/imageViewChart"
            android:layout_marginLeft="220dp"/>
        <ImageView
            android:id="@+id/imageExit"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/ic_logout"
            android:layout_below="@+id/txtSta"
            android:layout_marginLeft="145dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exit"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_below="@+id/imageExit"
            android:layout_marginLeft="160dp"
            />

    </RelativeLayout>
</LinearLayout>