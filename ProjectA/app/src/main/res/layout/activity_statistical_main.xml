<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_sub">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Statistical"
        android:layout_gravity="center"
        android:textSize="40dp"
        android:textColor="#33CC33"/>
    <!--row 15 to row 102: Tổng hợp số lượng SV theo ngành-->
    <!--<TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tổng hợp số lượng sinh viên theo ngành"
        android:textSize="20dp"/>-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/textViewMajor_Sta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Major"
            android:textColor="#FFFF00"
            android:textSize="30dp" />
        <TextView
            android:id="@+id/textViewQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity"
            android:layout_marginLeft="70dp"
            android:textSize="30dp"
            android:textColor="#FFFF00"/>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textViewITMajor_Sta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IT"
            android:textSize="20dp"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="90dp"
            />
        <TextView
            android:id="@+id/textViewITQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IT's Quantity"
            android:textSize="20dp"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="230dp"
            />
        <TextView
            android:id="@+id/textViewEnglishMajor_Sta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="English"
            android:textSize="20dp"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="90dp"
            android:layout_below="@+id/textViewITMajor_Sta"
            />
        <TextView
            android:id="@+id/textViewEnglishQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="English's Quantity"
            android:textSize="20dp"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="120dp"
            android:layout_toRightOf="@+id/textViewITMajor_Sta"
            android:layout_below="@+id/textViewITMajor_Sta"
            />
        <TextView
            android:id="@+id/textViewTouristMajor_Sta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tourist"
            android:textSize="20dp"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="90dp"
            android:layout_below="@+id/textViewEnglishMajor_Sta"
            />
        <TextView
            android:id="@+id/textViewTouristQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tourist's Quantity"
            android:textSize="20dp"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="75dp"
            android:layout_toRightOf="@+id/textViewTouristMajor_Sta"
            android:layout_below="@+id/textViewEnglishMajor_Sta" />
    </RelativeLayout>
    <!--row 103 to row 190: Tổng hợp số lượng SV theo DTB-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/textViewAcademic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Academic"
            android:textSize="30dp"
            android:textColor="#FFFF00"/>
        <TextView
            android:id="@+id/textViewQuantity2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity"
            android:layout_marginLeft="70dp"
            android:textSize="30dp"
            android:textColor="#FFFF00"/>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textViewOutstanding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Outstanding"
            android:textSize="20dp"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="90dp"
            />
        <TextView
            android:id="@+id/textViewOutstandingQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SLHS Giỏi"
            android:textSize="20dp"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="235dp"
            />
        <TextView
            android:id="@+id/textViewExcellent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Excellent"
            android:textSize="20dp"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="90dp"
            android:layout_below="@+id/textViewOutstanding"
            />
        <TextView
            android:id="@+id/textViewExcellentQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SLHS Khá"
            android:textSize="20dp"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="65dp"
            android:layout_toRightOf="@+id/textViewExcellent"
            android:layout_below="@+id/textViewOutstanding"
            />
        <TextView
            android:id="@+id/textViewAverage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Average"
            android:textSize="20dp"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="90dp"
            android:layout_below="@+id/textViewExcellent"
            />
        <TextView
            android:id="@+id/textViewAverageQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SLHS Trung Bình"
            android:textSize="20dp"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="70dp"
            android:layout_toRightOf="@+id/textViewAverage"
            android:layout_below="@+id/textViewExcellent" />
        <TextView
            android:id="@+id/textViewBad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bad"
            android:textSize="20dp"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="90dp"
            android:layout_below="@+id/textViewAverage"
            />
        <TextView
            android:id="@+id/textViewBadQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SLHS Yếu"
            android:textSize="20dp"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="106dp"
            android:layout_toRightOf="@+id/textViewBad"
            android:layout_below="@+id/textViewAverage"/>
    </RelativeLayout>
    <Button
        android:id="@+id/btnBack"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textViewBad"
        android:layout_gravity="center"
        />
</LinearLayout>