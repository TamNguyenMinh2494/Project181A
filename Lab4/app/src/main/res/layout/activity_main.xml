<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context="com.minhtamnguyen.calculator.MainActivity">
<TableLayout
    android:layout_width="wrap_content"
    android:layout_height="596dp"
    android:stretchColumns="*"
    android:background="#000">
    <TableRow>

        <EditText
            android:id="@+id/EdtKQ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_span="4"
            android:inputType="number"
            android:padding="50dp"
            android:textColor="#FFF"
            android:textSize="20dp" />
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/Bnt7"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="7"
            android:textSize="25dp"
            android:padding="25dp"/>
        <Button
            android:id="@+id/Bnt8"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="8"
            android:textSize="25dp"
            android:padding="25dp"/>
        <Button
            android:id="@+id/Bnt9"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="9"
            android:textSize="25dp"
            android:padding="25dp"/>
        <Button
            android:id="@+id/BntDel"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Del"
            android:textSize="25dp"
            android:padding="25dp"/>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/Bnt4"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="4"
            android:textSize="25dp"
            android:padding="25dp"/>
        <Button
            android:id="@+id/Bnt5"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="5"
            android:textSize="25dp"
            android:padding="25dp"/>
        <Button
            android:id="@+id/Bnt6"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="6"
            android:textSize="25dp"
            android:padding="25dp"/>
        <Button
            android:id="@+id/BntChia"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="/"
            android:textSize="25dp"
            android:padding="25dp"/>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/Bnt1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="1"
            android:textSize="25dp"
            android:padding="25dp"/>
        <Button
            android:id="@+id/Bnt2"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="2"
            android:textSize="25dp"
            android:padding="25dp"/>
        <Button
            android:id="@+id/Bnt3"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="3"
            android:textSize="25dp"
            android:padding="25dp"/>
        <Button
            android:id="@+id/BntNhan"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="*"
            android:textSize="25dp"
            android:padding="25dp"/>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/BntCham"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="."
            android:textSize="25dp"
            android:padding="25dp"/>
        <Button
            android:id="@+id/Bnt0"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="0"
            android:textSize="25dp"
            android:padding="25dp"/>
        <Button
            android:id="@+id/BntTru"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="-"
            android:textSize="25dp"
            android:padding="25dp"/>
        <Button
            android:id="@+id/BntCong"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="+"
            android:textSize="25dp"
            android:padding="25dp"/>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/BntNull"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text=" "
            android:textSize="25dp"
            android:padding="25dp"
            android:layout_span="3"/>
        <Button
            android:id="@+id/BntBang"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="="
            android:textSize="25dp"
            android:padding="25dp"/>
    </TableRow>
</TableLayout>
</android.support.constraint.ConstraintLayout>