<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/TxtN1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Nhập số thứ nhất: "
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:id="@+id/TxtN2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Nhập số thứ hai: "
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/TxtN1"
            />
        <TextView
            android:id="@+id/TxtN3"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Chọn phép toán: "
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/TxtN2"
            />
        <EditText
            android:id="@+id/EdtN1"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"

            android:gravity="end"
            android:layout_marginBottom="30dp"
            android:layout_toRightOf="@+id/TxtN1"
            />
        <EditText
            android:id="@+id/EdtN2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"

            android:gravity="end"
            android:layout_marginTop="50dp"
            android:layout_toRightOf="@id/TxtN2"
            />
        <Button
            android:id="@+id/BtnKq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kết quả"
            android:textSize="23dp"
            android:textAllCaps="false"
            android:layout_below="@+id/TxtN3"
            android:layout_marginTop="30dp"
            />
        <TextView
            android:id="@+id/TxtKq"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_alignBaseline="@+id/BtnKq"
            android:layout_alignBottom="@+id/BtnKq"
            android:layout_alignLeft="@+id/EdtN2"

            android:gravity="end"
        />
        <Spinner
            android:id="@+id/spinnerPhepTinh"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/EdtN2"
            android:layout_toRightOf="@+id/TxtN3"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="59dp"/>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>